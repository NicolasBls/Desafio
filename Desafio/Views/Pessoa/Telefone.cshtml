@model Desafio.Models.Numero

@{
    ViewBag.Title = "_Telefone";
    var pessoaId = ViewBag.pessoaId;
}

<div class="card">
    <div class="card-header">
        <span style="font-size: 15pt">Editar Pessoa</span>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <a class="btn btn-outline-warning" href="@Url.Action("Editar", new { pessoaId })">Dados</a>  <a class="btn btn-outline-primary" href="@Url.Action("Endereco", new { pessoaId })">Endereço</a>  <a class="btn btn-success" href="@Url.Action("Telefone", new { pessoaId })">Telefone</a>

                @using (Html.BeginForm())
{
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(x => x.pessoaId);

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.numeroId)

                        <div class="form-group">
                            @Html.Label("Número", htmlAttributes: new { @class = "control-label col-md-12" })
                            <div class="col-md-10">
                                <input class="form-control mask-numero" type="text" name="numero1" data-mask="(00) 0 0000-0000" />
                                @Html.ValidationMessageFor(model => model.numero1, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Salvar" class="btn btn-success" />
                            </div>
                        </div>
                    </div>
}
            </div>
            <div class="col-md-6">
                @{Html.RenderAction("_ListarNumero","Pessoa",new { pessoaId = pessoaId });}
                
            </div>

        </div>
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
    </div>
</div>